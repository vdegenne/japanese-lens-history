{
	"name": "japanese-lens-history",
	"version": "1.0.0",
	"description": "Google lens japanese learning history",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"devDependencies": {
		"@material/web": "^2.2.0",
		"@snar/lit": "^1.6.0",
		"@types/fs-extra": "^11.0.4",
		"@types/koa": "^2.15.0",
		"@types/koa__cors": "^5.0.0",
		"@types/koa__router": "^12.0.4",
		"@types/koa-static": "^4.0.4",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/material-color-helpers": "^1.11.0",
		"@vdegenne/rollup-plugin-minify-html": "^1.0.6",
		"chalk": "^5.4.1",
		"custom-element-decorator": "^0.6.0",
		"lit": "^3.2.1",
		"lit-with-styles": "^2.1.3",
		"material-3-prompt-dialog": "^1.0.1",
		"material-shell": "^1.2.7",
		"postcss": "^8.4.49",
		"rollup-plugin-material-all": "^1.2.2",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"snar": "^2.2.0",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^3.4.17",
		"toastit": "^1.1.7",
		"typescript": "^5.7.2",
		"vite": "^6.0.5",
		"vite-plugin-mdicon2svg": "^0.1.0",
		"vscode-ui-connector": "^0.2.0",
		"wireit": "^0.14.9"
	},
	"dependencies": {
		"@koa/bodyparser": "^5.1.1",
		"@koa/cors": "^5.0.0",
		"@koa/router": "^13.1.0",
		"fs-extra": "^11.2.0",
		"koa": "^2.15.3",
		"koa-static": "^5.0.0",
		"node-fetch": "^3.3.2"
	},
	"scripts": {
		"build:server": "wireit",
		"serve:server": "wireit",
		"dev:front": "wireit",
		"dev": "wireit",
		"build": "wireit",
		"test": "wireit",
		"serve": "wireit",
		"build:filenames-text-map": "wireit",
		"pm2": "pm2 start \"npm run serve --watch\" --name lens-history"
	},
	"wireit": {
		"serve": {
			"dependencies": [
				"server:serve",
				"push-last-data-file"
			]
		},
		"build:filenames-text-map": {
			"command": "node ./scripts/construct-filenames-texts-map.js",
			"files": [
				"./scripts/construct-filenames-texts-map.js",
				"./dist/data"
			],
			"output": [
				"./src/filenamesTextsMap.json"
			]
		},
		"build:server": {
			"command": "tsc --project ./tsconfig.server.json",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.server.json",
				"./src/server.ts"
			],
			"output": [
				"./server.js"
			]
		},
		"serve:server": {
			"service": true,
			"command": "node server.js",
			"dependencies": [
				"build:server"
			]
		},
		"dev:front": {
			"service": true,
			"command": "vite --host",
			"dependencies": [
				"dev:vuc"
			]
		},
		"build:front": {
			"command": "vite build",
			"dependencies": [
				"build:filenames-text-map"
			],
			"files": [
				"./vite.config.ts",
				"./src/"
			],
			"output": [
				"./dist",
				"!./dist/data"
			]
		},
		"dev": {
			"dependencies": [
				"build:filenames-text-map",
				"dev:front",
				"dev:vuc"
			]
		},
		"build": {
			"dependencies": [
				"build:server",
				"build:front"
			]
		},
		"push-last-data-file": {
			"command": "./scripts/commit-last-data-file.sh",
			"files": [
				"./scripts/commit-last-data-file.sh",
				"./dist/data/"
			],
			"output": []
		},
		"dev:vuc": {
			"service": true,
			"command": "vuc",
			"files": [
				"./.vuc.json"
			]
		}
	}
}
