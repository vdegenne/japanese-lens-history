{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"useDefineForClassFields": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": [
			"vite/client",
			"lit",
			"lit/decorators.js",
			"material-shell",
			"./types.d.ts"
		]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./node_modules"]
}
